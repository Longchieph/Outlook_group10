<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.DraftFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/nothinginArchive"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/nothing_in_archive"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="150dp"
            >
        </ImageView>

        <TextView
            android:id="@+id/firstLineInArchive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nothing in Archive"
            android:textSize="17sp"
            android:textColor="@color/black"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/nothinginArchive"
            android:fontFamily="@font/abadi_mt_bold"
            >
        </TextView>
        <TextView
            android:id="@+id/secondLineInArchive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Clean up your inbox by\nmoving messages to Archive"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:layout_below="@+id/firstLineInArchive"
            android:layout_marginTop="10dp"
            >
        </TextView>

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0.6"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/secondLineInArchive"
            android:text="GO TO INBOX"
            android:textColor="@color/blue_character"

            />
    </RelativeLayout>

</FrameLayout>